<h2>#Artists </h2>

<table>
  <tr>
  <th style="width:150px;"><h5>First name</h5></th>
  <th style="width:150px;"><h5>Surname</h5></th>
  
  <th colspan="3"></th>
  </tr>
 
<% @artists.each do |artist| %>
  <tr>
    <td><%= artist.first_name %></td>
    <td><%= artist.last_name %></td>
    <td><%= link_to 'Display', artist_path(artist) %></td>
    <td><%= link_to 'Edit', edit_artist_path(artist) %></td>
    <td><%= link_to 'Delete', artist_path(artist),
                    method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
<br>

<p>

<h5><%= link_to '+ Artist', new_artist_path %></h5>
</p>


